<h2 id="recipe-title">  <%= recipe.title %></h2>
<div class="columns">
  <div class="column is-half">
    <img src="<%= recipe.url %>" alt="<%= recipe.title %>" />
    <h5><%= recipe.creator.username %></h5>
  </div>
  <div class="column is-half">
    <h5>Ingredients</h5>
    <ul>
      <li><%= recipe.ingredients %></li>
    </ul>
    <h5>Comments</h5>
    <% recipe.comments.forEach( comment =>{ %>
    <li><%= locals.user.username %></li>
    <li><%= comment.content %></li>
    <% }) %>
    <form class="" action="/recipes/<%= recipe.id %>/comment" method="POST">
      <textarea name="content" rows="8" cols="80"></textarea>
      <button name="button">Post a comment</button>
    </form>
    <a href="/recipes/<%= recipe.id %>/edit">Edit</a>
    <form class="" action="/recipes/<%= recipe.id %>/" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <button name="button">Delete</button>
    </form>
  </div>
</div>
