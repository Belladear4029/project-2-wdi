<h2>All Recipes</h2>

<ul class="columns">
  <% recipes.forEach( recipe =>{ %>
    <li class=" column is-one-quarter">
      <a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a>
      <img style="max-width: 200px " src='<%= recipe.url %>' alt='<%= recipe.title %>' />
      <% if(recipe.creator){%>
        <%= recipe.creator.username %>
      <% } %>
    </li>
  <% }) %>
</ul>
