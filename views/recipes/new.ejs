<form action="/recipes" method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" class="input" name="title" id="title">
    </div>
    <div>
        <label for="url">Url</label>
        <input type="url" class="input" name="url" id="url">
    </div>
    <div>
        <label for="ingredients">Ingredients</label>
        <input type="ingredients" class="input" name="ingredients" id="ingredients">
    </div>
    <div>
        <label for="method">Method</label>
        <textarea id="method-input" class="input" rows="8" cols="80" name="method" id="method"></textarea>
    </div>
    <div class="control">
      <button id="submit" class="button" name="button is-link">Submit</button>
    </div>
</form>
